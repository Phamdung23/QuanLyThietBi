@model DATA.Entity.LOAI_THIET_BI
@{
    ViewBag.Title = "SreachLoaiThietBi";
    Layout = "~/Share/layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tìm Kiếm Loại Thiết Bị</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }

        h1 {
            text-align: center;
        }

        #search-box {
            margin-bottom: 20px;
        }

        #search-input {
            width: 300px;
            padding: 8px;
            font-size: 16px;
        }

        #search-button {
            padding: 8px 16px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            #search-button:hover {
                background-color: #0056b3;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        #add-button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #28a745;
            color: #fff;
            border: none;
            cursor: pointer;
        }

            #add-button:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Tìm Kiếm Loại Thiết Bị</h1>
        <table id="result-table">
            <thead>
                <tr>
                    <th>Mã Loại Thiết Bị</th>
                    <th>Tên Loại Thiết Bị</th>
                    <th>Đơn vị tính</th>
                </tr>
            </thead>
            <tbody>
                @{
                  <tr>
                         <td>@Model.MaLoai</td>
                         <td>@Model.TenLoai</td>
                         <td>@Model.DVT</td>
                  </tr>
                }
            </tbody>
        </table>
        <button id="add-button">@Html.ActionLink("OK", "NhomThietBi")</button>
    </div>

    <script>
    </script>
</body>
</html>


